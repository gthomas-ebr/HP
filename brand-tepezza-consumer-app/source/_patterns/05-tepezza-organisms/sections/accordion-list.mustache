{{#accordionTepezza}}

<div class="accordion-expand">
	<span class="expand">Expand All</span>
	<span class="collapse">Collapse All</span>
</div>

<div class="accordion-list {{accordionClass}}">
	{{#singleCard}}
		<div class="card {{accordionSubClass}}">
			{{#toggleLink}}	
				<h2 class="card-title">
				  <a class="{{linkClass}}" href="#" data-toggle="collapse"  role="button" aria-expanded="true" aria-controls="{{collapseName}}" data-target="{{targetLink}}">{{linkTxt}}</a>
				</h2>
			{{/toggleLink}}
			<div class="row">
				<div class="col">
					<div class="collapse {{collapseClass}}" id="{{accordionid}}">
						<div class="card-body">
							{{#listBody}}
								{{>starterkit-atoms-headings}}
								{{>starterkit-atoms-list}}
							{{/listBody}}
							{{#paraBody}}
								{{>starterkit-atoms-paragraph}}
								{{#secPara}}
									{{>starterkit-atoms-paragraph}}
								{{/secPara}}
								{{>starterkit-atoms-links}}
							{{/paraBody}}
						</div>
					</div>
				</div>
			</div>
		</div>
	{{/singleCard}}
</div>
{{/accordionTepezza}}