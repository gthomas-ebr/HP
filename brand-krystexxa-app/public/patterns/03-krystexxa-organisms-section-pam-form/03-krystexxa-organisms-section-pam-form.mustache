<section>
  <div class="container">
    {{#pamForm}}
      <div class="{{PamFormClass}}">
        <div class="caption">
          {{#formCaption}}
            {{>starterkit-atoms-headings}}
          {{/formCaption}}
        </div>
        <form action="{{formAction}}" novalidate="novalidate" id="pamForm" method="post">
          <div class="form-wrapper">
            {{#inputFirstName}}
              {{>starterkit-molecules-input-with-label}}
            {{/inputFirstName}}
            {{#inputLastName}}
              {{>starterkit-molecules-input-with-label}}
            {{/inputLastName}}
            {{#inputEmailAddress}}
              {{>starterkit-molecules-input-with-label}}
            {{/inputEmailAddress}}
            {{#inputPhoneNumber}}
              {{>starterkit-molecules-input-with-label}}
            {{/inputPhoneNumber}}
            {{#inputZipCode}}
              {{>starterkit-molecules-input-with-label}}
            {{/inputZipCode}}
            {{#checkOne}}
              {{>starterkit-atoms-paragraph}}
              <fieldset class="radio-button-wrap">
                {{#radioButtonList}}
                  {{>starterkit-atoms-radio-button}}
                {{/radioButtonList}}
              </fieldset>
            {{/checkOne}}
            {{#selectOne}}
              <div class="check-hide select-one">
                <fieldset class="radio-button-wrap">
                  {{#radioButtonList}}
                    {{>starterkit-atoms-radio-button}}
                  {{/radioButtonList}}
                </fieldset>
              </div>
            {{/selectOne}}
            {{#checkTwo}}
              {{>starterkit-atoms-paragraph}}
              <fieldset class="radio-button-wrap">
                {{#radioButtonList}}
                  {{>starterkit-atoms-radio-button}}
                {{/radioButtonList}}
              </fieldset>
            {{/checkTwo}}
          </div>
          {{#optional}}
            {{>starterkit-atoms-headings}}
          {{/optional}}
          <div class="form-wrapper">
            {{#checkThree}}
              {{>starterkit-atoms-paragraph}}
              <fieldset class="radio-button-wrap">
                {{#radioButtonList}}
                  {{>starterkit-atoms-radio-button}}
                {{/radioButtonList}}
              </fieldset>
            {{/checkThree}}
            {{#checkFour}}
              {{>starterkit-atoms-paragraph}}
              <fieldset class="radio-button-wrap">
                {{#radioButtonList}}
                  {{>starterkit-atoms-radio-button}}
                {{/radioButtonList}}
              </fieldset>
            {{/checkFour}}
          </div>
          {{#termsConditions}}
            {{>starterkit-atoms-paragraph}}
          {{/termsConditions}}
          {{#termCheckbox}}
            <div class="radio-button-wrap terms-checkbox">
              {{#radioField}}
                <span class="field-validation-valid" data-valmsg-for="{{radioForID}}" data-valmsg-replace="true"></span>
                <div class="form-check {{radioButtonClass}}">
                  <input {{#attributes}} {{ name }}="{{ value }}" {{/attributes}} {{#required }} data-val-required="{{ errorMessage }}" {{/required }}>
                  <label for="Terms">{{{radioTxt}}}</label>
                </div>
              {{/radioField}}
            </div>
          {{/termCheckbox}}
          <button type="submit" class="{{buttonClass}}">Submit</button>
        </form>
      </div>
    {{/pamForm}}
  </div>
</section>